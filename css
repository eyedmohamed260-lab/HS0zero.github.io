/* Hide Scrollbars */
.scroll-tape {
    position: fixed;
    top: 0;
    bottom: 0;
    width: 100px; /* Adjust width as needed */
    background-color: rgba(0, 0, 0, 0.7);
    overflow-y: auto; /* Enable vertical scrolling */
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px 0;

    /* Hide scrollbars */
    scrollbar-width: none; /* For Firefox */
    -ms-overflow-style: none; /* For Internet Explorer and Edge */

    /* Smooth scroll effect */
    transition: transform 0.3s ease;
}

/* Hide scrollbars for WebKit browsers (Chrome, Safari) */
.scroll-tape::-webkit-scrollbar {
    display: none;
}
.scroll-tape img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    margin: 10px 0;
    cursor: pointer;
    border: 2px solid #fff;
    border-radius: 5px;
    transition: transform 0.3s ease; /* Smooth scaling */
}

.scroll-tape img:hover {
    transform: scale(1.1); /* Slightly enlarge on hover */
}
/* Vertical Scrolling Tape */
.scroll-tape {
    position: fixed;
    top: 0;
    bottom: 0;
    width: 200px; /* Doubled from 100px to 200px */
    background-color: rgba(0, 0, 0, 0.7);
    overflow-y: auto; /* Enable vertical scrolling */
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 40px 0; /* Increased padding for larger area */

    /* Hide scrollbars */
    scrollbar-width: none; /* For Firefox */
    -ms-overflow-style: none; /* For Internet Explorer and Edge */

    /* Smooth scroll effect */
    transition: transform 0.3s ease;
}

/* Hide scrollbars for WebKit browsers (Chrome, Safari) */
.scroll-tape::-webkit-scrollbar {
    display: none;
}

.scroll-tape img {
    width: 160px; /* Doubled from 80px to 160px */
    height: 160px; /* Doubled from 80px to 160px */
    object-fit: cover;
    margin: 20px 0; /* Increased margin for spacing */
    cursor: pointer;
    border: 4px solid #fff; /* Increased border thickness */
    border-radius: 10px; /* Slightly rounded corners */
    transition: transform 0.3s ease; /* Smooth scaling */
}

.scroll-tape img:hover {
    transform: scale(1.1); /* Slightly enlarge on hover */
}

